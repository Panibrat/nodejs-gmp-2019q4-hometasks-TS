{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended",
        "tslint-config-airbnb"
    ],
    "rules": {
        "indent": [true, "spaces", 4],
        "no-var-requires": false,
        "ter-indent": false,
        "cyclomatic-complexity": [true, 22],
        "align": [true, "elements", "members", "statements"],
        "binary-expression-operand-order": true,
        "comment-format": [true, "check-space"],
        "max-file-line-count": [true, 1300],
        "max-line-length": [true, 180],
        "prefer-array-literal": [true, { "allow-type-parameters": true }],
        "member-access": false,
        "no-console": false,
        "no-debugger": false,
        "no-duplicate-variable": [true, "check-parameters"],
        "no-floating-promises": true,
        "no-import-side-effect": false,
        "no-increment-decrement": false,
        "no-inferrable-types": [true, "ignore-params", "ignore-properties"],
        "no-invalid-template-strings": true,
        "no-invalid-this": true,
        "no-irregular-whitespace": true,
        "no-sparse-arrays": true,
        "no-string-literal": false,
        "no-switch-case-fall-through": true, // If needed you can use /* falls through */
        "no-trailing-whitespace": true,
        "no-unnecessary-callback-wrapper": true,
        "no-unnecessary-type-assertion": true,
        "no-unused-expression": false,
        "object-literal-key-quotes": [false, "as-needed"],
        "object-literal-sort-keys": false,
        "prefer-conditional-expression": true,
        "prefer-object-spread": true,
        "prefer-switch": true,
        "prefer-template": [true, "allow-single-concat"],
        "quotemark": [true, "single", "jsx-single"],
        "space-before-function-paren": [true, { "anonymous": "always", "asyncArrow": "always", "constructor": "never", "method": "never", "named": "never" }],
        "switch-final-break": [true, "always"],
        "use-default-type-parameter": true,
        "whitespace": [true, "check-branch", "check-decl", "check-operator", "check-module", "check-separator", "check-type", "check-typecast", "check-preblock"],
        "semicolon": [true, "always", "ignore-bound-class-methods"],
        "trailing-comma": [true, {"multiline": "always", "singleline": "never"}],
        "ordered-imports": false,
        "import-name": false,
        "interface-name": [false],
        "variable-name": [true, "allow-pascal-case"],
        "function-name": false,
        "eofline": false,
        "no-shadowed-variable": false
    }
}